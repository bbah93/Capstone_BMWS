<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.nyc.polymerse.fragments.UserResultsFilterFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/close_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_hollow"
            android:text="@string/close_filters" />

        <Button
            android:id="@+id/clear_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_hollow"
            android:text="@string/clear_filters" />

    </RelativeLayout>

    <TextView
        android:id="@+id/Roles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/role_filter"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>


    <CheckBox

        android:id="@+id/learning_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Sharing German" />

    <CheckBox
        android:id="@+id/sharing_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning Spanish" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="German Fluency Level"
        android:textColor="@color/secondaryDarkColor"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/beginner_fluency_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beginner_filter" />

    <CheckBox
        android:id="@+id/intermediate_fluency_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intermediate_filter" />

    <CheckBox
        android:id="@+id/advanced_fluency_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advanced_filter" />

    <CheckBox
        android:id="@+id/fluent_fluency_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fluent_filter" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

    <Button
        android:id="@+id/apply_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_hollow"
        android:layout_alignParentBottom="true"
        android:text="@string/apply_filters" />

    </RelativeLayout>

</LinearLayout>
