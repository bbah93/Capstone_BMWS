<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context="com.nyc.polymerse.Profile_Creation.Name_Fragment"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:background="@drawable/gradient_background"
    >

    <TextView
        android:id="@+id/welcome_name_TV"
        android:text="Welcome to the Polymerse Community!"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/question_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="To get things started, can we have your name?"/>

    <android.support.v7.widget.CardView
        android:id="@+id/name_card"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        card_view:cardElevation="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBorder="20dp"
        card_view:cardCornerRadius= "20dp"
        >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:textStyle="italic"
                android:hint="@string/first_name" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/last_name_card"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        card_view:cardElevation="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBorder="20dp"
        card_view:cardCornerRadius= "20dp"
        >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom"
                android:textStyle="italic"
                android:hint="@string/last_name" />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_forward"
        android:layout_margin="16dp"
        android:backgroundTint="@color/light_blue"/>

</LinearLayout>
