<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/results_frame_layout"
    tools:context="com.nyc.polymerse.fragments.UserResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_margin="3dp"
            android:background="@drawable/button_hollow"
            android:id="@+id/filter_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/filter"
            android:textColor="@color/primaryTextColor"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_results_rec_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    </FrameLayout>

    <ProgressBar
        android:id="@+id/results_progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</FrameLayout>

